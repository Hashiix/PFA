{% extends 'base.html.twig' %}

{% block body %}

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('app_login_login') }}" method="post">
        <div class="form-group">
            Nickname
            <input placeholder="Your nickname" required name="_username"
                   type="text" class="form-control" value="{{ last_username }}">
        </div>
        <div class="form-group">
            Password
            <input placeholder="Your password" required name="_password"
                   type="password" class="form-control">
        </div>

        <div id="submit" class="text-center">
            <button type="submit" class="btn btn-info">Login</button>
        </div>

    </form>

    <p id="already">Not registered yet ?<a href='{{ path('app_signin_index') }}'><strong>Sign in !</strong></a></p>

{% endblock %}